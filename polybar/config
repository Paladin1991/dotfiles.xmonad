[colors]
background           = #0D1212
background-alt       = #FF6563
foreground           = #EBE1CD
foreground-alt       = #EBE1CD
primary              = #EBE1CD
secondary            = #EBE1CD
alert                = #EBE1CD
non                  = #EBE1CD

[bar/bar1]
width = 20%
height = 40
offset-x = 1%
offset-y = 2%
radius = 20.0
fixed-center = true
bottom = false
