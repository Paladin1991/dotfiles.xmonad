[module/time]
type = internal/date
interval = 60

format = <label>
format-background = #a3be8c
format-padding = 1

date = %{F#282A36}󰥔 %H:%M%{F-}
time-alt = %{F#282A36}󰃭 %a, %b %d%{F-}

label = %date%%time%

[module/workspaces]
type = internal/xworkspaces
;pin-workspaces = true
enable-click = true
enable-scroll = true
format-padding = 1

icon-default = 

format = <label-state>
format-background = ${color.bg1}
label-active = "  "
label-occupied = "  "
label-urgent = "  "
label-empty = "  "

label-active-foreground = ${colors.background-alt}
label-urgent-foreground = #F26364

label-empty-padding = 1
label-active-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1


[module/power_menu]
type = custom/text
content = "    "
content-padding = 0
content-foreground = ${colors.foreground}
click-left = eww open power

[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = "  "
click-left = eww open spotify
format = <label>
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

[module/volume]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
format-volume-font = 10
format-volume-padding = 0
ramp-volume-foreground = ${colors.foreground}
label-volume =
label-muted-foreground = ${colors.foreground}
label-muted = "    "
label-muted-padding = 0
ramp-volume-0 = "   "
ramp-volume-1 = "   "
ramp-volume-2 = "   "
ramp-volume-3 = "   "
ramp-volume-4 = "   "
ramp-volume-5 = "   "
ramp-volume-6 = "   "

click-right = eww open vol 

[module/date]
type = internal/date
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
time      = %I:%M %p
time-alt  = %A, %d %B %Y
label = " %time%"


